<div class="modal fade" id="user-edit-modal" tabindex="-1" aria-labelledby="myModalLabel" style="display: none;" aria-hidden="true">
  <div class="modal-dialog">
    <div class="modal-content">
      <div class="modal-body">
        <h4 class="modal-title text-center" id="H1"><%= t('update_user')%></h4>
        <button class="close close-L" type="button" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">Ã—</span></button>

        <div class="mt-3">
          <%= form_with scope: :user, url: user_path(id: @user["id"]), method: :put do |f| %>
          <div class="form-group row">
            <label for="example-text-input" class="col-md-2 col-form-label"><%= t('name') %></label>
            <div class="col-md-10">
              <%= f.text_field :full_name, value: user['full_name'], class: "form-control text-center", placeholder: t('name') %>
            </div>
          </div>

          <div class="form-group row">
            <label for="example-text-input" class="col-md-2 col-form-label"><%= t('email') %></label>
            <div class="col-md-10">
              <%= f.text_field :email, value: user['email'], class: "form-control text-center", placeholder: t('email') %>
            </div>
          </div>

          <div class="form-group row">
            <label for="example-text-input" class="col-md-2 col-form-label"><%= t('phone_number') %></label>
            <div class="col-md-10">
              <%= f.text_field :mobile,value: user['mobile'], class: "form-control text-center", placeholder: t('phone_number') %>
            </div>
          </div>

          <div class="form-group row">
            <label for="example-text-input" class="col-md-2 col-form-label"><%= t('authority_designation') %></label>
            <div class="col-md-10">
              <%= f.select :role, options_for_select(["Admin", "Approver", "operator"], selected: user["role"]), { include_blank: true},class: "custom-select custom-select-sm" %>
            </div>
          </div>

          <div class="form-group row">
            <div class="col-lg-12 text-center">
              <div class="sub-button">
                <%= button_tag( :class => "btn btn-labeled btn-secondary-blue btn-rdius btn-rdius-13 font-bold") do %>
                  Update <span class='btn-label btn-label-right'><i class='fa fa-plus'></i></span>
                <% end %>
              </div>
            </div>
          </div>
          <% end %>
        </div>
      </div>

    </div>
  </div>
</div>
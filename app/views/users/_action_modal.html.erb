<div class="modal fade" id="user-action-modal" tabindex="-1" aria-labelledby="myModalLabel" style="display: none;" aria-hidden="true">
  <div class="modal-dialog modal-sm">
    <div class="modal-content">
      <div class="modal-body">
        <button class="close close-L" type="button" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">Ã—</span></button>

        <div class="mt-3">
          <%= link_to "<i class='fa fa-edit'></i>".html_safe, edit_user_path(id: user.id) ,remote: true, class: "modal-link-space"%>
          <%= link_to "<i class='fa fa-eye'></i>".html_safe, user_path(id: user.id) ,remote: true, class: "modal-link-space"%>
          <%= link_to "<i class='fa fa-trash text-danger'></i>".html_safe, user_path(id: user.id) ,method: "delete", remote: true, class: "modal-link-space"%>
          <% status = user.status == "Active" ? "Block": "Active"%>
          <% message = "Are you sure you want to #{status} this user"%>
          <% if user.status == "Active"%>
            <%= link_to "<i class='fa fa-lock text-danger'></i>".html_safe, change_status_user_path(id: user.id), data: { confirm: message }, class: "modal-link-space"%>
          <% else %>
            <%= link_to "<i class='fa fa-unlock'></i>".html_safe, change_status_user_path(id: user.id) , data: { confirm: message }, class: "modal-link-space"%>
          <% end %>
        </div>
      </div>

    </div>
  </div>
</div>
<style type="text/css">
  .modal-link-space {margin-right: 10px;}
</style>
<!DOCTYPE html>
<html lang="en" xmlns="http://www.w3.org/1999/xhtml">
<head>
  <title></title>
  <style>
    .access-overlay { height: 1227px; }
  </style>
  <%= javascript_include_tag "/h-scroll/jquery.mCustomScrollbar.concat.min.js"%>
</head>
<body>
  <div class="main-wrapper p-0" id="right-scroll">
  <div class="bg-overlay">
  <img src="<%= asset_url('top-acce-bg.png') %>" class="w-100" style="height:280px;"/>
  </div>
    <div class="_1R8mR">
      <div class="access-overlay">
      <div class="container">
        <div class="row justify-content-center align-items-center">
        <div class="login-box col-md-12 pt-5 mt-5">
                <div class="theme-form login-form text-center pt-5 mt-5">
                    <div>
                        <div class="avatar-logo">
                        <img src="<%= asset_url('logo-new.png') %>" />
                        </div>
                        <h1 class="mt-5 mb-0">مكتبة الكتب الصوتية</h1>
                        <h1 class="mt-2">Audiobooks Library</h1>
                    </div>
                </div>
        </div>
      </div>
    </div>
  </div>
  <main class="main">
    <div id="content-rd" class="content light">
      <div class="container">
        <div class="row">
          <div class="col-md-12">
             <h2 class="text-right">الكتب الصوتية</h2>
          </div>
        </div>
        <div class="row mt-4">
          <% if @books.blank? %>
            No Record Found
          <% else %>
          <% @books.each do |book| %>
            <% book = book["attributes"] %>                
            <div class="col-md-6 col-lg-3 col-xl-3">
              <div id="Div4" class="single-product">
                <div class="part-1">
                  <span class="checkout-product-img">
                    <% img_url = book["cover"] rescue nil %>
                    <%= link_to web_booth_book_path(booth_id: @booth["number"], id: book["id"]), remote: true do %>
                      <img src="<%= img_url %>" class="rounded" />
                    <% end %>
                  </span>
                  <div class="first">

                    <div class="d-flex justify-content-between align-items-center">

                      <span class="discount-1"><%= book["language"].to_s.at(0) %></span>
                      <span class="wishlist"><%= Time.at(book["book_duration"].to_f).utc.strftime("%H:%M:%S") %> min <i class="fa fa-headphones pl-1" aria-hidden="true"></i></span>
                    </div>
                  </div>
                </div>
                <div class="part-2">
                  <% if params[:locale] == "ar" %>
                    <h3 class="product-title text-right"><%= book["arabic_title"] %></h3>
                    <h4 class="product-old-price text-right mt-3 mb-4"><%= book["arabic_author_name"] %></h4>
                    <h6 class="author text-right"><%= book["arabic_display_categories"] %></h6>
                  <% else %>
                    <h3 class="product-title text-right"><%= book["title"] %></h3>
                    <h4 class="product-old-price text-right mt-3 mb-4"><%= book["author_name"] %></h4>
                    <h6 class="author text-right"><%= book["display_categories"] %></h6>
                  <% end %>
                </div>
              </div>
            </div>
          <% end %>
          <% end %>
        </div>

      </div>
    </div>
  </main>
    <footer>
      <div class="container">
        <div class="row align-items-center">
          <div class="col-md-3">
            <%= link_to web_booth_path(id: @booth["number"]) do %>
              <img class="img-fluid" src="<%= asset_url('footer-logo-white.png') %>">
            <% end %>
          </div>
          <div class="col-md-9 text-right">
            <%= link_to web_booth_books_path(booth_id: @booth["number"]), class:"btn btn-light-grey btn-footer", remote: true do %>
              <img src="<%= asset_url('back-white.png') %>">
            <% end %>
            <% false && if params[:locale] == "en" || params[:locale] == nil %>
              <%= link_to category_search_web_booth_books_path(booth_id: @booth["number"], category_id: @categories.first.id, locale: :ar), class:"btn btn-light-grey btn-footer", remote: true do %>
                <img src="<%= asset_url('arabic.png') %>">
              <% end %>
            <% else %>
              <%= link_to category_search_web_booth_books_path(booth_id: @booth["number"], category_id: @categories.first.id), class:"btn btn-light-grey btn-footer", remote: true do %>
                <img src="<%= asset_url('eng-white.png') %>">
              <% end %>
            <% end %>

            <%= link_to accessibility_mode_web_booth_books_path(booth_id: @booth["number"]), remote: true, class:"btn btn-light-grey btn-footer" do %>
              <img src="<%= asset_url('access-white.png') %>">
            <% end %>

           <%= link_to  children_mode_web_booth_books_path(booth_id: @booth["number"]), class: "btn btn-light-grey btn-footer", remote: true do %>
              <img src="<%= asset_url('baby-white.png') %>">
            <% end %>
          </div>

        </div>
      </div>
    </footer>
  </div>
<!--   <script src="http://ajax.googleapis.com/ajax/libs/jquery/1.11.0/jquery.min.js"></script>
 -->
<script>
  (function ($){
    $.mCustomScrollbar.defaults.scrollButtons.enable = true; //enable scrolling buttons by default
    $.mCustomScrollbar.defaults.axis = "yx"; //enable 2 axis scrollbars by default

    $("#content-l").mCustomScrollbar();
    $("#content-rd").mCustomScrollbar({ theme: "rounded-dark" });
    $(".all-themes-switch a").click(function (e) {
      e.preventDefault();
      var $this = $(this),
      rel = $this.attr("rel"),
      el = $(".content");
      switch (rel) {
        case "toggle-content":
        el.toggleClass("expanded-content");
        break;
      }
    });
  })(jQuery);
</script>

 
</body>
</html>
<style>
  .isDisabled {
    pointer-events: none;
  }
  .access-overlay { height:935px;position:relative; }
  .bg-overlay {
    #  background-image: url("/assets/images/img1.jpeg") !important;
   
  }
  .single-product .part-1 {
    position: relative;
  }
  .single-product {
    width:200px;
  }
</style>

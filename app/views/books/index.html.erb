            </div>
          </div>


          <div class="form-group row">
            <label class="col-md-2 col-form-label pr-0"><%= t('book_duration') %></label>
            <div class="col-md-4">
              <div class="row">
                <div class="col-lg-12">
                  <input name="only_show", class= "form-control text-center book-duration-show" readonly="true">
                  <%= f.text_field :book_duration, class: "form-control text-center book-duration", placeholder: t('book_duration'), readonly: true, hidden: true %>

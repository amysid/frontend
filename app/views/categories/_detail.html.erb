<div class="modal fade" id="category-detail-modal" tabindex="-1" aria-labelledby="myModalLabel" style="display: none;" aria-hidden="true">
  <div class="modal-dialog modal-mdd">
    <div class="modal-content">
      <div class="modal-body">
        <h4 class="modal-title text-center mb-3" id="H1"><%= t('category_details') %></h4>
        <button class="close close-L" type="button" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">Ã—</span></button>
        <div class="row">
          <label for="example-text-input" class="col-md-4 col-form-label"><%= t('category_name')%></label>
          <div class="col-md-6 col-form-label text-black font-17">
            <%= @category["name"] %>
          </div>                           
        </div>
        <div class="row">
          <label for="example-text-input" class="col-md-4 col-form-label"><%= t('category_arabic_name')%></label>
          <div class="col-md-6 col-form-label text-black font-17">
            <%= @category["arabic_name"] %>
          </div>                           
        </div>
        <div class="row">
          <label for="example-text-input" class="col-md-4 col-form-label"><%= t('category_french_name')%></label>
          <div class="col-md-6 col-form-label text-black font-17">
            <%= @category["french_name"] %>
          </div>                           
        </div>
        <div class="row">
          <label for="example-text-input" class="col-md-4 col-form-label"><%= t('booth_location')%></label>
          <div class="col-md-6 col-form-label text-black font-17">
            <%#= select_tag t('booth'), options_for_select(category.booths.pluck(:name, :id)), class: "custom-select custom-select-sm text-center"%>
          </div>                           
        </div>
      </div>

    </div>
  </div>
</div>
<style type="text/css">
  .modal-mdd {max-width: 500px;}
   .font-17{font-size: 17px}
    .text-black{color:#000;}
</style>
    $("#book-cover-field").change(function(event){
       var input = $(event.currentTarget);
       var file = input[0].files[0];
        var file_extention = $("#book-cover-field").val().split('.').pop().toLowerCase();
       if($.inArray(file_extention, ['gif','png','jpg','jpeg']) == -1) {
        alert('File has invalid extension only png, jpg, jpeg file is supported!');
        $("#book-cover-field").val('')
        return
      }
       var reader = new FileReader();
